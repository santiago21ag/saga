<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formulario">

    <EditText
        android:id="@+id/editTextNombre"
        android:layout_width="301dp"
        android:layout_height="44dp"
        android:layout_marginTop="148dp"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEdad"
        android:layout_width="302dp"
        android:layout_height="44dp"
        android:layout_below="@id/editTextNombre"
        android:layout_marginTop="24dp"
        android:hint="Edad"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombre" />

    <EditText
        android:id="@+id/editTextSalario"
        android:layout_width="304dp"
        android:layout_height="47dp"
        android:layout_below="@id/editTextEdad"
        android:layout_marginTop="28dp"
        android:hint="Salario"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextEdad"
        tools:layout_editor_absoluteX="53dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="297dp"
        android:layout_height="45dp"
        android:layout_below="@id/editTextSalario"
        android:layout_marginTop="52dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSalario" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="241dp"
        android:layout_height="32dp"
        android:text="FORMULARIO DE REGISTRO"
        android:background="@color/black"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNombre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_editor_absoluteX="81dp" />

</androidx.constraintlayout.widget.ConstraintLayout>